<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/livre.css') }}">

        {% endblock %}
    </head>
    <body class="body">
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script>

                function recherche() {
                    var mot = document.getElementById("recherche").value;
                    var liste = document.getElementsByName("livre");

                    for (var i=0 ; i < liste.length ; i++){

                        if  (liste[i].id.includes(mot)){

                            liste[i].style.display="block";
                        }
                        else {
                            liste[i].style.display="none";
                        }

                    }

                }
            </script>{% endblock %}
    </body>
</html>
