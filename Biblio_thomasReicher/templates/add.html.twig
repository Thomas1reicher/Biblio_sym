{%  extends 'base.html.twig' %}

{% block title %}ajout d'un livre {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="centre-titre">Ajouter un livre</h1>


<div class="centre-form">
    {{ form_start(form) }}
    <div class="form-group">
        <div class="row" >
        {{ form_errors(form.titre) }}
        {{ form_label(form.titre) }}
        </div>
        <div class="row" >
        {{ form_widget(form.titre, {'attr': {'class':'radius' , 'placeholder': form.titre.vars.label} }) }}
        </div>
        </div>
    <div class="form-group">
        <div class="row" >
        {{ form_errors(form.auteur) }}
        {{ form_label(form.auteur) }}
        </div>
        <div class="row" >
        {{ form_widget(form.auteur, {'attr': {'class':'radius' , 'placeholder': form.auteur.vars.label} }) }}
        </div>
        </div>
    <div class="form-group">
        <div class="row" >
        {{ form_errors(form.synopsis) }}
        {{ form_label(form.synopsis) }}
        </div>
        <div class="row" >
        {{ form_widget(form.synopsis, {'attr': {'class':'radius', 'placeholder': form.synopsis.vars.label} }) }}
        </div>
        </div>
    <div class="form-group">
        <div class="row" >
        {{ form_label(form.image) }}
        </div>
        <div class="row" >
        {{ form_widget(form.image, {'attr': {'class':'radius', 'placeholder': form.image.vars.label} }) }}
        </div>
        </div>

    <button type="submit" class="btn btn-info">ajouter le livre</button>
    {{ form_end(form) }}
</div>
{% endblock %}
